<project name="GraphJ" default="run" basedir=".">

  <property file="./build.properties"/>
	
  <property name="dir.build" value="./build"/>

  <path id="classpath">
    <pathelement path="${dir.build}/classes/tst"/>
    <pathelement path="${dir.build}/classes/layouts"/>
    <pathelement path="${dir.build}/classes/core"/>
    <pathelement path="${dir.build}/classes/shell"/>
    <pathelement path="./src/shell"/>
  </path>

  <property name="classpath" refid="classpath"/>

  <!--
   Initialization
   -->
  <target name="init">
    <mkdir dir="${dir.build}"/>
  </target>

  <!--
   Core Compilation
   -->
  <target name="compile.core" depends="init">
    <mkdir dir="${dir.build}/classes/core"/>
    <javac srcdir="src/core" destdir="${dir.build}/classes/core"
           debug="on" optimize="off" deprecation="off" fork="true">
      <classpath refid="classpath"/>
    </javac>
  </target>

  <!--
   Layouts Compilation
   -->
  <target name="compile.layouts" depends="init">
    <mkdir dir="${dir.build}/classes/layouts"/>
    <javac srcdir="src/layouts" destdir="${dir.build}/classes/layouts"
           debug="on" optimize="off" deprecation="off" fork="true">
      <classpath refid="classpath"/>
    </javac>
  </target>

  <!--
   Shell Compilation
   -->
  <target name="compile.shell" depends="init">
    <mkdir dir="${dir.build}/classes/shell"/>
    <javac srcdir="src/shell" destdir="${dir.build}/classes/shell"
           debug="on" optimize="off" deprecation="off" fork="true">
      <classpath refid="classpath"/>
    </javac>
    <copy todir="${dir.build}/classes/shell">
      <fileset dir="./src/shell" includes="**/*.properties"/>
    </copy>
  </target>

  <!--
   Compilation
   -->
  <target name="compile" depends="compile.core, compile.layouts, compile.shell">
  </target>

  <!--
   Cleaning
   -->
  <target name="clean">
    <delete dir="${dir.build}"/>
  </target>

  <!--
   Run
   -->
  <target name="run" depends="compile">
    <java classname="gj.shell.Shell" fork="true">
       <classpath refid="classpath"/>
    </java>
  </target>
  
  <!--
   Dist TreeLayout
   -->
  <target name="dist.tree" depends="compile">
     <delete file="${dir.build}/gj-tree.jar"/>
     <jar jarfile="${dir.build}/gj-tree.jar" update="True">
       <fileset dir="${dir.build}/classes/core"
           includes="gj/geom/*
                    ,gj/layout/*
                    ,gj/layout/tree/**
                    ,gj/model/*
                    ,gj/util/*"/>
     </jar>
  </target>
  
</project>
